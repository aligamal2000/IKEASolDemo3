@using IKEA.BILLDemo3.Dto_s.Employees
@model EmployeeDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1>Employee @Model.Name Details</h1>
<!-- Bootstrap Tabs -->

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="form-group col-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control mb-3" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control mb-3" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control mb-3" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control mb-3" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control mb-3" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="EmployeeType"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                <option value="">Choose...</option>
            </select>
        </div>

        <div class="form-group col-6">
            <label class="control-label mb-2">Gender</label> <br />
            @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
                <div>
                    <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption" />
                    <label class="form-check-label" for="Gender_@genderOption">@genderOption</label>
                </div>
            }
        </div>

        <div class="form-group col-12">
            <label asp-for="HiringDate"></label>
            <input asp-for="HiringDate" class="form-control mb-3" />
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div class="form-group col-12 my-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>
        </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group  col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group  col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
    </div>
        <form asp-action="Delete" method="post" asp-route-Empid="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back To List</a>
            </div>
        </form>
</div>

